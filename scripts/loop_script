#!/bin/bash

loopy ()
{
    if [ $(playerctl loop) = "None" ]; then
        echo "ğŸ”"
    elif [ $(playerctl loop) = "Playlist" ]; then
        echo "ï€"
    else
        echo ""
    fi
}

if [[ "$1" == "--loop" ]]; then
    loopy
elif [ $(playerctl loop) = "None" ]; then
    playerctl loop playlist
elif [ $(playerctl loop) = "Playlist" ]; then
    playerctl loop none

fi
